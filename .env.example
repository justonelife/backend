# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database Configuration
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USERNAME=nest_user
DATABASE_PASSWORD=nest_password
DATABASE_NAME=nest_db

# JWT Configuration
# Use strong, randomly generated secrets in production
JWT_ACCESS_SECRET=your-super-strong-access-secret
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_SECRET=your-even-stronger-refresh-secret
JWT_REFRESH_EXPIRATION=7d

# Hashing
PASSWORD_SALT_ROUNDS=12

# Security
CORS_ORIGIN=http://localhost:3001 # Your frontend URL
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100
